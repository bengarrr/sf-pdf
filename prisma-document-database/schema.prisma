generator client {
  provider = "prisma-client-js"
  output   = "../prisma-document-database/prisma-document-client-types"
}

datasource db {
  provider = "mongodb"
  url      = env("MG_DOCUMENT_DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  pgUser    String  @unique
  documents Document[]
}

model Document {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  authorId  String
  author    User    @relation(fields: [authorId], references: [pgUser])
}
