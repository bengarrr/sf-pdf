generator client {
  provider = "prisma-client-js"
  output   = "../prisma-user-database/prisma-user-client-types"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_USER_DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  password  String? 
  messages  Message[]
  chats     Chat[]

  @@index([id]) 
}

model UserSessions {
  id            String  @id @default(uuid())
  sessionKey    String
}

model Message {
  id          String    @id @default(uuid())
  authorId    String 
  author      User      @relation(fields: [authorId], references: [id])
  chatId      String
  chat        Chat      @relation(fields: [chatId], references: [id])
  content     String
  createdAt   DateTime  @default(now())

  @@index([chatId])
  @@index([authorId])
}

model Chat {
  id          String    @id @default(uuid())
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  messages    Message[]
  fileId      String?
  createdAt   DateTime  @default(now())

  @@index([authorId])
}


